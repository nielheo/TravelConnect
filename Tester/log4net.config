<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="InfoFile" type="log4net.Appender.RollingFileAppender">
    <file value="D:\logs\TravelConnect\React\Gta\Info.log" />
    <appendToFile value="true" />
    <maximumFileSize value="901024KB" />
    <maxSizeRollBackups value="10" />
    <ImmediateFlush value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5p %d{yyyy-MMM-dd HH:mm:ss} %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="INFO" />
    <appender-ref ref="InfoFile" />
  </root>
</log4net>